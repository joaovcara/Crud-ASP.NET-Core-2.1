@model IEnumerable<VendasWebMVC.Models.Departamento>

@{
    ViewData["Title"] = "Index";
}

<h2>Departamentos</h2>

<p>
    <a asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdDepartamento">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdDepartamento">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdDepartamento">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
